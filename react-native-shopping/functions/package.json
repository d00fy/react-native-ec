{
    "name": "functions",
    "scripts": {
        "build": "tsc",
        "serve": "npm run build && firebase serve --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "test": "jest",
        "dbreset": "firebase firestore:delete --all-collections",
        "dbreset:publishers": "firebase firestore:delete -y --shallow publishers",
        "dbseed": "npm run dbseed:publishers",
        "dbseed:publishers": "node lib/commands/dbseed.js publishers seeds/publishers.tsv",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "10"
    },
    "main": "lib/index.js",
    "dependencies": {
        "commander": "^4.0.1",
        "csv-parse": "^4.8.2",
        "date-fns": "^2.8.1",
        "date-fns-timezone": "^0.1.4",
        "firebase": "^7.5.2",
        "firebase-admin": "^8.6.0",
        "firebase-functions": "^3.3.0",
        "lodash": "^4.17.15",
        "node-fetch": "^2.6.0",
        "puppeteer": "^2.0.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/lodash": "^4.14.149",
        "@types/node": "^12.12.16",
        "@types/node-fetch": "^2.5.4",
        "@types/puppeteer": "^2.0.0",
        "firebase-functions-test": "^0.1.6",
        "jest": "^24.9.0",
        "ts-jest": "^24.2.0",
        "typescript": "^3.2.2"
    },
    "private": true,
    "jest": {
        "preset": "ts-jest",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts?|js?)$",
        "moduleFileExtensions": [
            "ts",
            "json",
            "js"
        ]
    }
}
